<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>
  <p>
    <strong>Payment:</strong>
    <%= button_to 'Buy Now!', checkout_create_path, params: {id: product.id}, remote: true %>
  </p>

</div>
